---
import { socials } from "../constants";
---

<section class="flex justify-center">
  <div
    class="flex mt-8 lg:mt-0 lg:grid lg:grid-cols-2 w-fit h-fit gap-10 justify-center flex-wrap"
  >
    {
      socials.map((social) => (
        <a href={social.url} class="text-2xl md:text-5xl lg:text-7xl">
          <i class={social.icon} />
        </a>
      ))
    }
  </div>
</section>
