---
import { TEXT_CAROUSEL } from "../constants";
---

<section class="bg-primary text-background py-6 overflow-hidden" id="marquee">
  <ul class="flex gap-20 whitespace-nowrap marque-content scroll">
    {
      TEXT_CAROUSEL.map((item) => (
        <li class="raleway-black uppercase md:text-5xl text-3xl lg:text-7xl carousel-item transition-all">
          {item}
        </li>
      ))
    }
  </ul>
  <ul class="flex gap-20 whitespace-nowrap marque-content scroll" aria-hidden>
    {
      TEXT_CAROUSEL.map((item) => (
        <li class="raleway-black uppercase md:text-5xl text-3xl lg:text-7xl carousel-item transition-all">
          {item}
        </li>
      ))
    }
  </ul>
</section>
