---
import Section from "./section.astro";
const photos = await Astro.glob("../assets/photos/*.jpeg");

if (photos.length < 9) {
  throw new Error("Not enough photos");
}
const col1 = photos.slice(0, 3);
const col2 = photos.slice(3, 6);
const col3 = photos.slice(6, 9);
---

<Section title="Photography" tag="I like taking pictures" fullWidth>
  <section
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 max-w-screen-3xl mx-auto mt-10 gap-6"
  >
    <div class="flex flex-col gap-6">
      {col1.map((photo) => <img src={photo.default.src} class="rounded-xl" />)}
    </div>
    <div class="flex flex-col gap-6">
      {col2.map((photo) => <img src={photo.default.src} class="rounded-xl" />)}
    </div>
    <div class="flex flex-col gap-6">
      {col3.map((photo) => <img src={photo.default.src} class="rounded-xl" />)}
    </div>
  </section>
</Section>
